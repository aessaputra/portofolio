# NextAuth.js Core Secrets
# Google OAuth client credentials: create through https://console.cloud.google.com/
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
# Used for signing JWTs and securing CSRF tokens. Generate via `openssl rand -base64 32`
NEXTAUTH_SECRET=

# PostgreSQL Database
# Example: DATABASE_URL="postgres://USER:PASSWORD@HOST:PORT/DATABASE"
DATABASE_URL=

# Admin Role-Based Access Control
# Comma-separated list of email addresses allowed to authenticate as administrators.
ADMIN_EMAIL_ALLOWLIST=

# Outgoing Email (used for magic link authentication)
EMAIL_SERVER_HOST=
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
# Set to "true" to use TLS.
EMAIL_SERVER_SECURE=false
EMAIL_FROM="Admin Panel <no-reply@example.com>"
# Optional override (seconds) for magic link expiry - defaults to 900 (15 minutes)
# ADMIN_MAGIC_LINK_MAX_AGE=900

# Cloudflare R2 Storage for Profile Images
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET_NAME=
CLOUDFLARE_R2_PUBLIC_URL=
